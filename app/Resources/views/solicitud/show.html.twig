{% extends 'base.html.twig' %}

{% block body %}
    <h1>Solicitud</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ solicitud.id }}</td>
            </tr>
            <tr>
                <th>Fechasolicitud</th>
                <td>{% if solicitud.fechaSolicitud %}{{ solicitud.fechaSolicitud|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ solicitud.observacion }}</td>
            </tr>
            <tr>
                <th>Completado</th>
                <td>{% if solicitud.completado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('solicitud_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('solicitud_edit', { 'id': solicitud.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
